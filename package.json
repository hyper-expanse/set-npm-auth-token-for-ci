{
  "author": {
    "name": "Hutson Betts",
    "email": "hutson@hyper-expanse.net",
    "url": "https://hyper-expanse.net/hutson"
  },
  "bin": "",
  "bugs": "https://github.com/hyper-expanse/set-npm-auth-token-for-ci/issues",
  "description": "Set authentication token placeholder into `.npmrc` file for use in automated CI processes.",
  "engines": {
    "node": ">=8.9.0"
  },
  "files": [
    "src/**/!(*.spec).js"
  ],
  "homepage": "https://github.com/hyper-expanse/set-npm-auth-token-for-ci#readme",
  "keywords": [
    "automation",
    "npmrc",
    "npm",
    "ci",
    "token"
  ],
  "license": "Apache-2.0",
  "main": "src/index.js",
  "mocha": {
    "checkLeaks": true,
    "fullTrace": true,
    "inlineDiffs": true,
    "recursive": true,
    "reporter": "progress"
  },
  "name": "@hutson/set-npm-auth-token-for-ci",
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/cli.js",
      "src/**/*.spec.js",
      "src/**/*.mock.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      ":maintainLockFilesWeekly",
      ":rebaseStalePrs",
      ":automergeDigest",
      ":gitSignOff",
      ":automergeMinor",
      ":preserveSemverRanges"
    ],
    "docker": {
      "pinDigests": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyper-expanse/set-npm-auth-token-for-ci.git"
  },
  "scripts": {
    "test": "semistandard 'src/**/*.js' && nyc mocha src/**/*.spec.js"
  },
  "version": "1.0.0",
  "dependencies": {
    "debug": "^4.0.0",
    "local-or-home-npmrc": "^1.1.0",
    "registry-url": "^5.1.0"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "semistandard": "^13.0.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.2.0",
    "tmp": "^0.1.0"
  }
}
